# C:\inetpub\wwwroot\mail\config-v1.1.xml
# > https://portalauditoria.com.br/mail/config-v1.1.xml

<?xml version="1.0"?>
<clientConfig version="1.1">
  <emailProvider id="portalauditoria.com.br">
    <domain>portalauditoria.com.br</domain>
    <displayName>Portal Auditoria Email</displayName>
    <displayShortName>Portal Auditoria</displayShortName>

    <!-- Servidor IMAP -->
    <incomingServer type="imap">
      <hostname>mail.portalauditoria.com.br</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>

    <!-- Servidor SMTP -->
    <outgoingServer type="smtp">
      <hostname>mail.portalauditoria.com.br</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>

  </emailProvider>
</clientConfig>
